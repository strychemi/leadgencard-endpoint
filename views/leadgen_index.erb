<h4>Lead Generation Card Index</h4>

<p><%= status_message if !status_message.nil? %></p>

<% if @cards %>
  <p>Sorry! The server has no record of lead generation cards!</p>
<% else %>

  <table class="table table-hover">
    <tr>
      <th>Card Name</th>
      <th>Twitter Card ID</th>
      <th>Link to Leads</th>
    </tr>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.card %></td>
        <td><a href="/card/<%= card.id %>">SEE LEADS</a></td>
      </tr>
    <% end %>
  </table>
<% end %>
